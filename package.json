{
  "name": "temba-monorepo",
  "type": "module",
  "private": true,
  "workspaces": [
    "packages/*",
    "docs",
    "examples"
  ],
  "scripts": {
    "test": "npm test -w packages/temba",
    "test:mongodb": "npm run test:mongodb -w packages/temba",
    "test:watch": "npm run test:watch -w packages/temba",
    "lint": "npm run lint -w packages/temba",
    "check": "npm run lint && npm test",
    "docs:deploy": "USE_SSH=true npm run deploy -w docs",
    "docs:preview": "npm run start -w docs",
    "update": "npm run update --workspaces --if-present"
  }
}
