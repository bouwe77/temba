{
  "name": "temba-monorepo",
  "type": "module",
  "private": true,
  "workspaces": [
    "packages/*",
    "docs",
    "examples"
  ],
  "scripts": {
    "test": "npm test -w packages/temba",
    "lint": "npm run lint -w packages/temba",
    "check": "npm run lint && npm test",
    "docs:deploy": "cd docs && USE_SSH=true npm run deploy",
    "docs:preview": "npm run start -w docs"
  }
}
